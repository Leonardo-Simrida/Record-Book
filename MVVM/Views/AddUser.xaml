<Window x:Class="Record_Book.MVVM.Views.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Record_Book.MVVM.Views"
        mc:Ignorable="d"
        Title="AddUser" Height="450" Width="400" ResizeMode="NoResize">
    <Grid>
        <Label Content="Name" Margin="25" FontFamily="Outfit" FontWeight="SemiBold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding Name}" Height="30" Width="200" Margin="25,50" VerticalContentAlignment="Center" FontFamily="Outfit" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Label Content="Email" Margin="25,100" FontFamily="Outfit" FontWeight="SemiBold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding Email}" Height="30" Width="200" Margin="25,125" VerticalContentAlignment="Center" FontFamily="Outfit" FontSize="15" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <Button Content="Add" Height="30" Width="70" VerticalContentAlignment="Center" FontFamily="Outfit" FontWeight="SemiBold" Command="{Binding AddUserCommand}" Padding="5" Margin="25" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
